{
    "colorscheme": "monokai",

    "ruler": true,
    "relativeruler": false,
    "cursorline": true,
    "colorcolumn": 80,

    "tabsize": 4,
    "tabstospaces": true,
    "autoindent": true,
    "indentchar": " ",

    "softwrap": false,
    "wordwrap": false,
    "scrollmargin": 3,
    "scrollspeed": 2,

    "mouse": true,
    "clipboard": "external",
    "autosave": 240,
    "saveundo": true,

    "syntax": true,
    "hlsearch": true,
    "ignorecase": false,
    "smartcase": true,

    "matchbrace": true,
    "matchbracestyle": "underline",
    "showmatching": true,

    "fileformat": "unix",
    "encoding": "utf-8",
    "rmtrailingws": true,
    "eofnewline": true,

    "diffgutter": true,
    "statusline": true,
    "divider": true,

    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],

    "linter": true,
    "spellerrors": true,

    "backup": true,
    "backupdir": "~/.config/micro/backups"
}
